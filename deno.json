{
  "workspace": ["website", "packages/*"],
  "lint": {
    "rules": { "exclude": ["no-explicit-any"] }
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "website": "cd ./website && vite",
    "website:build": "cd ./website && deno task build",
    "website:serve": "cd ./website && deno task serve",
    "website:fix": "cd ./website && eslint src/server --fix"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns"]
  },
  "imports": {
    "@types/alpinejs": "npm:@types/alpinejs@^3.13.11",
    "@zag-js/core": "npm:@zag-js/core@^1.24.1",
    "@zag-js/dom-query": "npm:@zag-js/dom-query@^1.24.1",
    "alpinejs": "npm:alpinejs@^3.15.0"
  }
}
